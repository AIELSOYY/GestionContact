{% extends 'base.html.twig' %}

{% block title %}Fiche Categories{% endblock %}

{% block body %}
    <h1>Liste des Catégories</h1>
    <div class ="border border-dark m-4 rounded-3">
        <div class="border-bottom border-light px-3">
            <h2>{{laCategorie.libelle}}</h2>
        </div>
        <div class ="d-flex p-3">
            <div>
                <img src="{{laCategorie.image}}" alt="">
            </div>
            <div class ="px-3">
                <p>{{laCategorie.description}}</p>
            </div>
        </div>
    </div>
    <a href="{{path('categories')}}" class="btn btn-success btn-block text-center mx-4">Retourner à la liste</a>
{% endblock %}
